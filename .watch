{
  "build": [
    {
      "patterns": ["src/**/*.{js,ts}"],
      "command": "npm run build:ts",
      "settle": 500
      // "appendFiles": true,
      // "appendSeparator": ","
    },
    {
      "patterns": ["src/**/*"],
      "command": "npm run clean && npm run build",
      "change": false,
      "add": false,
      "delete": true
    }
  ],
  "lint": [
    {
      "patterns": ["src/**/*.ts", ".eslintrc"],
      "command": "npm run eslint --",
      "appendFiles": true
    }
  ]
}
