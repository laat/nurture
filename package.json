{
  "name": "nurture",
  "version": "2.2.8",
  "description": "A filewatcher",
  "license": "MIT",
  "repository": "laat/nurture",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "author": {
    "name": "Sigurd Fosseng",
    "email": "sigurd@fosseng.net",
    "url": "https://github.com/laat"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "clean": "rimraf lib",
    "build:js": "babel -s --ignore=test.js -d lib src",
    "build:flow": "flow-copy-source src lib",
    "build": "npm-run-all build:*",
    "eslint": "eslint -f tap",
    "lint": "npm run eslint -- .",
    "prepublish": "npm run build",
    "test": "npm run lint",
    "watch": "node lib/cli.js build",
    "flow": "flow check"
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "laat",
    "watchman",
    "file",
    "fswatcher",
    "watchfile",
    "fs",
    "watching"
  ],
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "10.1.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-preset-stage-2": "6.24.1",
    "eslint": "7.8.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "flow-bin": "0.132.0",
    "flow-copy-source": "2.0.9",
    "husky": "4.2.5",
    "lint-staged": "10.2.13",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.1",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.19",
    "tap-notify": "1.0.0"
  },
  "dependencies": {
    "async": "^3.0.0",
    "chalk": "^4.0.0",
    "debounce": "^1.2.0",
    "escape-string-regexp": "^4.0.0",
    "find-up": "^5.0.0",
    "loud-rejection": "^2.0.0",
    "minimatch": "^3.0.4",
    "multipipe": "^4.0.0",
    "ora": "^5.0.0",
    "pify": "^5.0.0",
    "sane": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
