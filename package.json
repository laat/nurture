{
  "name": "nurture",
  "version": "2.2.8",
  "description": "A filewatcher",
  "license": "MIT",
  "repository": "laat/nurture",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "author": {
    "name": "Sigurd Fosseng",
    "email": "sigurd@fosseng.net",
    "url": "https://github.com/laat"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "clean": "rimraf lib",
    "build:js": "babel -s --ignore=test.js -d lib src",
    "build:flow": "flow-copy-source src lib",
    "build": "npm-run-all build:*",
    "eslint": "eslint -f tap",
    "lint": "npm run eslint -- .",
    "prepublish": "npm run build",
    "test": "npm run lint",
    "watch": "node lib/cli.js build",
    "flow": "flow check",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "laat",
    "watchman",
    "file",
    "fswatcher",
    "watchfile",
    "fs",
    "watching"
  ],
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "10.0.1",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-preset-stage-2": "6.24.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-import": "2.16.0",
    "flow-bin": "0.95.1",
    "flow-copy-source": "2.0.3",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "source-map-support": "0.5.11",
    "tap-notify": "1.0.0"
  },
  "dependencies": {
    "async": "^2.6.1",
    "chalk": "^2.4.1",
    "debounce": "^1.2.0",
    "escape-string-regexp": "^1.0.5",
    "find-up": "^3.0.0",
    "loud-rejection": "^2.0.0",
    "minimatch": "^3.0.4",
    "multipipe": "^3.0.0",
    "ora": "^3.0.0",
    "pify": "^4.0.1",
    "sane": "^4.0.2"
  }
}
